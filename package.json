{
  "name": "automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:allure": "rimraf allure-results allure-report",
    "test": "cross-env ENV=emt npx playwright test || npm run posttest",
    "test:prod": "cross-env ENV=prod npx playwright test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "pretest:tag": "npm run clean:allure",
    "test:tag": "node src/config/configuration.js",
    "posttest": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC", 
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.7.2",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3",
    "cross-env": "^10.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}